\mode<presentation>

%% Define colors according to the official UU visual identity:
\definecolor{uuyellow}{RGB}{255,205,0}
\definecolor{uured}{RGB}{192,10,53}
\definecolor{uucream}{RGB}{250,230,171}
\definecolor{uuorange}{RGB}{243,150,94}
\definecolor{uuburgundy}{RGB}{170,21,85}
\definecolor{uubrown}{RGB}{110,59,35}
\definecolor{uugreen}{RGB}{36,167,147}
\definecolor{uublue}{RGB}{82,135,198}
\definecolor{uudarkblue}{RGB}{0,18,64}
\definecolor{uupurple}{RGB}{91,33,130}

\setbeamercolor*{palette primary}{fg=white,bg=uured}
\setbeamercolor*{palette secondary}{fg=white,bg=uuyellow}
\setbeamercolor*{palette tertiary}{fg=white,bg=black}

%% The quaternary palette will be used for the accent color block on
%% the top half of the title page.
\setbeamercolor*{palette quaternary}{fg=white,bg=black}

\setbeamercolor*{titlelike}{bg=black}
\setbeamercolor*{frametitle}{bg=black,fg=black}
\setbeamercolor*{part title}{bg=black,fg=black}
\setbeamercolor*{item}{fg=uured}

\setbeamercolor*{block title}{fg = black, bg = uuyellow}
\setbeamercolor*{block body}{fg = black, bg = uucream}
\setbeamercolor*{block title alerted}{fg = white, bg = uured}
\setbeamercolor*{block body alerted}{fg = black, bg = uuorange}
\setbeamercolor*{block title example}{fg = white, bg = uudarkblue}
\setbeamercolor*{block body example}{fg = black, bg = uublue}

\setbeamercolor*{section in toc}{fg = uured}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
